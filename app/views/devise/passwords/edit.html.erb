<div class="row">
  <div class="col-md-3 col-md-offset-4">

    <h2 class="margin-bottom">修改密码</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "新密码" %>
        <% if @minimum_password_length %>
          <em>(最小<%= @minimum_password_length %>个字符)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "确认新密码" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"  %>
      </div>

      <div class="actions">
        <%= f.submit "确认修改", class: "btn btn-primary btn-width margin-bottom" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
